<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/scoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:onClick="onButtonClick"
            android:text="High Score" />

    </RelativeLayout>

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"

        android:id="@+id/choice_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"

        grid:alignmentMode="alignBounds"
        grid:columnCount="4"
        grid:rowOrderPreserved="false"
        grid:useDefaultMargins="true">

        <ImageButton
            android:id="@+id/image1_row1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="0"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image2_row1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="1"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image3_row1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="2"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image4_row1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="3"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image1_row2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="4"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image2_row2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="5"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image3_row2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="6"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image4_row2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="7"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image1_row3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="8"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image2_row3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="9"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image3_row3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="10"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image4_row3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="11"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image1_row4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="12"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image2_row4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="13"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageView
            android:id="@+id/image3_row4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="14"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/image4_row4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:onClick="onCardClick"
            android:src="@drawable/card_bg"
            android:tag="15"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal" />


    </android.support.v7.widget.GridLayout>

</LinearLayout>
