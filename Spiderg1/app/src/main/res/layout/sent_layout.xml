<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDEE3">

    <RelativeLayout
        android:id="@+id/innerlayout"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Updated 10:10"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middleOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/innerlayout"
        android:layout_marginBottom="50dp">

        <ListView
            android:id="@+id/LV_all_sent_items"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:divider="@null"
            android:requiresFadingEdge="vertical">

        </ListView>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lastOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#7A7A7A">


        <RelativeLayout
            android:id="@+id/insidelastOne"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_marginTop="1dp"
            android:background="#ffffff">

            <Button
                android:id="@+id/buttonCash"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                android:background="#ffffff"
                android:gravity="center"
                android:text="Invoice"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/TextView3"
                android:layout_alignStart="@+id/TextView3"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="21dp" />

            <Button
                android:id="@+id/buttonOnline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0B54DD"
                android:gravity="center"
                android:text="RFQ"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#7D7D7D"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/buttonOnline"
                android:layout_alignStart="@+id/buttonOnline"
                android:layout_marginLeft="88dp"
                android:layout_marginStart="88dp" />
            <TextView
                android:id="@+id/TextView2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#7D7D7D"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignTop="@+id/buttonOnline"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/TextView3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="81dp"
                android:layout_marginRight="81dp"
                android:background="#7D7D7D"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:textSize="12sp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Quotation"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/TextView2"
                android:layout_toStartOf="@+id/TextView2"
                android:layout_toRightOf="@+id/TextView1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:text="PO"
                android:id="@+id/button4"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/TextView3"
                android:layout_toRightOf="@+id/TextView2"
                android:layout_toEndOf="@+id/TextView2" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
