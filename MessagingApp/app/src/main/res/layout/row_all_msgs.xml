<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/shopData_apparel_shops"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#ffffff"

        >

        <!-- android:background="@color/white" -->
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/forimage_apparel_shops"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageViewapparel_shops"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/inside"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"

            android:layout_toRightOf="@+id/forimage_apparel_shops"
            android:layout_toEndOf="@+id/forimage_apparel_shops">

            <TextView
                android:id="@+id/shop_name_apparel_shops"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text=""
                android:singleLine="true"
                android:maxLength="30"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/below_inside"
            android:layout_below="@+id/inside"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/forimage_apparel_shops"
            android:layout_toEndOf="@+id/forimage_apparel_shops">
            <TextView
                android:id="@+id/maintext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=""
                android:singleLine="true"
                android:maxLength="30"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
